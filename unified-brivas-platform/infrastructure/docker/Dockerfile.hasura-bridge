# Dockerfile for Hasura Bridge
# GraphQL/REST API gateway with schema auto-discovery

# ==================== Builder Stage ====================
FROM rust:1.75-bookworm AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY shared/ shared/
COPY crates/ crates/
COPY microservices/ microservices/

# Build the service
RUN cargo build --release -p hasura-bridge

# ==================== Runtime Stage ====================
FROM debian:bookworm-slim AS runtime

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -r -s /bin/false brivas

# Copy binary from builder
COPY --from=builder /app/target/release/hasura-bridge /usr/local/bin/hasura-bridge

# Security: Run as non-root
USER brivas

# Environment variables
ENV RUST_LOG=info
ENV HTTP_BIND=0.0.0.0:8080
ENV LUMADB_URL=postgres://brivas:password@lumadb:5432/brivas
ENV GRAPHQL_ENDPOINT=/v1/graphql

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD wget -q --spider http://localhost:8080/health || exit 1

# Expose ports
EXPOSE 8080

ENTRYPOINT ["/usr/local/bin/hasura-bridge"]
